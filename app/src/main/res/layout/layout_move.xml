<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="279dp"
        android:layout_height="362dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/madde"
        >

        <TextView
            android:id="@+id/complated"
            android:layout_width="227dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/madde"
            android:backgroundTint="#b9d3ee"
            android:text="PLEASE ENTER THE NUMBER OF TASK THAT YOU COMPLETED"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/numberCompleted"
            android:layout_width="192dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_background"
            android:backgroundTint="#b9d3ee"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="Which task ? "
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background"
            android:layout_marginTop="40dp"
            android:backgroundTint="#b9d3ee"
            android:layout_gravity="center"
            android:text="Complete"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>