<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <solid
                android:color="#0C0D12" />

            <corners
                android:radius="1111111dp" />

            <gradient
                android:centerColor="#448AFF"
                android:startColor="#536DFE"
                android:endColor="#448AFF"
                android:type="linear"/>

            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"/>

            <size android:height="40dp"/>

        </shape>
    </item>

    <item android:drawable="@drawable/plus"
        android:gravity="center" />


</layer-list>
